/* pages/meegtinginfo/info.wxss */
.apply_info_row{
 line-height: 40px;
 border-bottom: 1rpx dashed  rgba(84,92,99,.1);
}

.apply_info_row2{
 margin-top: 10px;
 line-height: 30px;
 border-bottom: 0rpx dashed  rgba(84,92,99,.1);
 color: #0669c7;

}
.info{
  padding:10px 10px 10px 10px;
  margin:0px 15px 0px 15px ;
  width: 85%;
  font-size:14px;
  background-color: #f8f8f9;
  border-radius: 2px;
  line-height: 40px;
}
.logo{
  padding:10px 10px 10px 10px; 
  margin:0px 15px 0px 15px ;
  line-height: 40px;
  text-align: center;
  letter-spacing:3rpx;
  font-size: 1.15rem;
  font-weight: 600;
  color: #09bb07;
}
.bg-image{
  width : 60px;
  height : 60px;
}
.button{
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  letter-spacing:3rpx;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  margin: 10px;
  color: #fff !important;
  background: #2d8cf0 !important;
}
.look{
  padding:15px 15px 15px 15px; 
  margin:15px 15px 15px 15px ;
}
.text{
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
}