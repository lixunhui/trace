/* pages/guide/guide.wxss */

.context {
  margin: 1px 10px 5px 10px;
  width: 94%;
  font-size: 14px;
  border-radius: 2px;
  color: #545c63;
}

image {
  width: 94%;
  height: 200px;
  margin: 10px 10px 5px 10px;
  display: inline-block;
  overflow: hidden;
}

.col-class {
  height: 50px;
  background-color: #f8f8f9;
  margin-bottom: 10px;
  padding: 15px 15px 15px 15px;
}

.col-class-button {
  height: 50px;
  background-color: #f8f8f9;
  margin-bottom: 10px;
  padding: 5px 5px 5px 5px;
}

.button {
  text-align: right;
  vertical-align: middle;
  cursor: pointer;
  font-size: 14px;
  position: relative;
  background: #f8f8f9 !important;
}

.button::after {
  border: none;
}

button[type=primary] {
  color: #2d8cf0;
}
.info{
  margin-top: 60px;
  margin-bottom: 20px;
  font-size: 14px;
  text-align: center;
  vertical-align: bottom;
  /* position: fixed; */
  bottom: 20px;
  width: 100%;
  color: #545c63;
}