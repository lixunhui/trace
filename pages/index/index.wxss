/**index.wxss**/
.container{
  background-color: #2e7d32;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.title{
color:#FFFFFF;
font-size:22px;
width:100%;
text-align:center;
margin-bottom:5%;
letter-spacing:8px;
font-weight: 800;
}
.authorization{
color:#FFFFFF;
font-size:14px;
width:100%;
text-align:center;
letter-spacing:2px;
font-weight: 600;
line-height: 40px;
margin-top: 20%;
}
.explain{
color:#e0e0e0;
font-size:13px;
width:100%;
text-align:center;
letter-spacing:1px;
line-height: 40px;
margin-top: 35%;
}

.button{
  width: 200px;
  letter-spacing:3px;
}
.logopic{
width:280rpx;
height:280rpx;
display:inline-block;
overflow:hidden;
margin-bottom:25%;
margin-top:25%;
}
.button{
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  letter-spacing:3rpx;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  margin: 10px;
  color: #2e7d32 !important;
  background: #FFFFFF !important;
}