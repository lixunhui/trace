}
.logopic{
width:280rpx;
height:280rpx;
display:inline-block;
overflow:hidden;
margin-bottom:25%;
margin-top:25%;
}
.button{
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  letter-spacing:3rpx;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  margin: 10px;
  color: #fff !important;
  background: #2d8cf0 !important;
}